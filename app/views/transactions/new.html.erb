<div class="container">
  <h1>New Transaction</h1>

  <%= form_with(model: @transaction, url: transactions_path, class: "form") do |form| %>
    <div class="form-group">
      <%= form.label :description, class: "control-label" %>
      <%= form.text_field :description, required: true, class: "form-control" %>
      <% @transaction.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :amount, class: "control-label" %>
      <%= form.text_field :amount, required: true, class: "form-control" %>
      <% @transaction.errors.full_messages_for(:amount).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :category, class: "control-label" %>
      <%= form.select :category, options_for_select(Transaction.categories.keys), { prompt: "Select a category" }, class: "form-control" %>
      <% @transaction.errors.full_messages_for(:category).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="mt-3">
      <%= form.submit "Create Transaction", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to "Back", transactions_path, class: "btn btn-outline-primary" %>
  </div>
</div>
