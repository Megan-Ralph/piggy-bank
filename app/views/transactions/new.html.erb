<h1>New Transaction</h1>

<%= form_with(model: @transaction, url: transactions_path) do |form| %>
  <div>
    <%= form.label :description %>
    <%= form.text_field :description, required: true %>
    <% @transaction.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :amount %>
    <%= form.text_field :amount, required: true %>
    <% @transaction.errors.full_messages_for(:amount).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <%= form.submit "Create Transaction" %>
<% end %>

<%= link_to "Back", transactions_path %>
