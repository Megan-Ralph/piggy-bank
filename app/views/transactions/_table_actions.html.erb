  <%= form_tag transactions_path, method: :get do %>
    <div class="row g-3">
      <div class="col-auto">
        <%= text_field_tag :search, params[:search], placeholder: 'Search Transactions', class: "form-control" %>
      </div>
      <div class="col-auto">
        <%= select_tag :category, options_for_select(Transaction.categories, params[:category]), include_blank: "Sort by Category", class: "form-control" %>
      </div>
      <div class="col-auto">
        <%= select_tag :sort_by, options_for_select(Transaction.sort_options, params[:sort_by]), include_blank: "Sort by", class: "form-control" %>
      </div>
      <div class="col-auto">
        <%= submit_tag 'Search', class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>