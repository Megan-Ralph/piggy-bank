<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.description %></td>
        <td><%= number_to_currency(transaction.amount) %></td>
      </tr>
    <% end %>
    <tr>
      <td>Total</td>
      <td><%= number_to_currency(@total) %></td>
    </tr>
  </tbody>
</table>

<%= link_to "New", new_transaction_path %>
